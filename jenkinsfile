pipeline {
    agent { label 'node1' }
    stages {
        stage('git clone') {
            steps {
                git url: 'https://github.com/shashirajraja/onlinebookstore.git'
            }
        }
        stage('mvn compile') {
            steps {
                sh '''
                 cd /home/ubuntu/workspace/maven-pipeline
                    mvn compile
                    '''
            }
        }
        stage('test') {
            steps {
                sh'''
                cd /home/ubuntu/workspace/maven-pipeline
                mvn test
                '''
            }
        }
        stage('pmd') {
            steps {
                sh'''
                cd /home/ubuntu/workspace/maven-pipeline
                mvn pmd:pmd
                '''
            }
        }
        stage('install') {
            steps {
                sh'''
                cd /home/ubuntu/workspace/maven-pipeline
                mvn install
                '''
            }
        }
        stage('copy') {
            steps {
                sh'''
                cd /home/ubuntu/
                bash scopy.sh
                '''
            }
        }
    }
}
