pipeline {
    agent { label 'node1' }
    stages {
        stage('git clone') {
            steps {
                git url: 'https://github.com/jaygajera17/E-commerce-project-springBoot.git'
            }
        }
        stage('mvn compile') {
            steps {
                sh '''
                 cd /home/ubuntu/workspace/maven-pipeline/E-mcomerce-project-springBoot/JtProject
                    mvn clean
                    mvn compile
                    '''
            }
        }
        stage('test') {
            steps {
                sh'''
                cd /home/ubuntu/workspace/maven-pipeline/E-mcomerce-project-springBoot/JtProject
                mvn test
                '''
            }
        }
        stage('pmd') {
            steps {
                sh'''
                cd /home/ubuntu/workspace/maven-pipeline/E-mcomerce-project-springBoot/JtProject
                mvn pmd:pmd
                '''
            }
        }
        stage('install') {
            steps {
                sh'''
                cd /home/ubuntu/workspace/maven-pipeline/E-mcomerce-project-springBoot/JtProject
                mvn install
                '''
            }
        }
        stage('copy') {
            steps {
                sh'''
                cd /home/ubuntu/
                bash scopy.sh
                '''
            }
        }
        stage('deploy to tomcat') {
            steps{
                sh '''
                cd /home/ubuntu/
                sudo ssh -o StrictHostKeyChecking=no -i /home/ubuntu/key/key.pem ubuntu@172.31.11.73 "bash scopy.sh"
                '''
            }
        }
    }
}
